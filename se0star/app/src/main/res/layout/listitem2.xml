<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle2"
    android:padding="8dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/add_image"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/rectangle4"
        android:layout_centerVertical="true"
        android:tint="#55ffffff"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:id="@+id/add_titlelayout"
        android:layout_alignTop="@+id/add_image"
        android:layout_toRightOf="@+id/add_image">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_list_name"
        android:textSize="17dp"
        android:textColor="#77ab68" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_list_num"
            android:textSize="17dp"
            android:layout_marginLeft="15dp"
            android:textColor="#fb9a29"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_unit"
            android:textSize="17dp"
            android:textColor="#bbfb9a29" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_list_kind"
        android:layout_below="@+id/add_titlelayout"
        android:layout_marginTop="3dp"
        android:textColor="#dd225613"
        android:layout_toRightOf="@+id/add_image"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/add_list_kind"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/add_image">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_list_startday"
        android:textColor="#666666"
        android:textSize="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ~ "
            android:textColor="#666666"
            android:textSize="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_list_finalday"
            android:textColor="#666666"
            android:textSize="13dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp">
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/listaddButton"
            android:focusable="false"
            android:background="@drawable/add"

            android:tag="position"
            android:layout_marginRight="8dp"/>
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/listdelButton"
            android:background="@drawable/delete"
            android:focusable="false"
            android:tag="position"/>
    </LinearLayout>

</RelativeLayout>