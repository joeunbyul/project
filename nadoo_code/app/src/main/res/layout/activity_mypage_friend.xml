<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nadoo.tacademy.eunbyul_nanu.MyPageNeed.MypageNeed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#eb675e">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mypage_friend_edit"
                android:layout_marginTop="13.7dp"
                android:layout_marginLeft="13.7dp"
                android:layout_marginBottom="13.7dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/mypage_edit_click"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11.7dp"
                android:layout_marginBottom="11.7dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/tab_title_friend"/>

            </LinearLayout>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mypage_friend_plus"
                android:layout_marginTop="13.7dp"
                android:layout_marginRight="13.7dp"
                android:layout_marginBottom="13.7dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/plus"
                android:background="@null"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8.5dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >
            <EditText
                android:id="@+id/mypage_friend_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textSize="15dp"
                android:layout_weight="1"
                android:focusable="true"
                android:drawableLeft="@drawable/search_red"
                android:background="@drawable/edittext_border"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mypage_friend_recyclerview">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>
    </LinearLayout>



</LinearLayout>
