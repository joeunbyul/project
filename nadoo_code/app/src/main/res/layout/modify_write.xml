<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D000000"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#eb675e">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/title_edit_need"
                android:background="@android:color/transparent"
                android:layout_centerInParent="true"
                />
           <!-- <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/TITLE_EDIT_NEED"
                android:layout_centerInParent="true"
                />-->
            <!--
                        <LinearLayout
                            android:layout_width="113.3dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="123.3dp"
                            android:layout_marginLeft="123.3dp"
                            >

                        </LinearLayout>
            -->
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/write_title_cardview"
                android:layout_marginBottom="8dp"
                android:elevation="0dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/register_write_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/name"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="10.3dp">
                        <EditText
                            android:id="@+id/edit_modify_write"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="15"
                            android:hint="물품명을 입력하세요."
                            android:textColorHint="#646464"
                            android:background="@drawable/text_box"

                            />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/write_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/register_location"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/write_selectmap"
                    android:src="@drawable/register_placeselect"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="#0D000000"
                    android:gravity="center"
                    android:layout_marginBottom="10.3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#80000000"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:id="@+id/maptitle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="14dp"
                        android:text="/"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#80000000"
                        android:layout_gravity="center"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:id="@+id/mapsubtitle"/>

                </LinearLayout>
            </LinearLayout>
            <!--카테고리 선택 -->
            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/category_cardview_write"
                android:layout_marginBottom="10dp"
                android:elevation="0dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/category_write"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/category"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_shoolbook"
                            android:background="@drawable/category_schoolbook_click"
                            android:onClick="category"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"
                            />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_book"
                            android:background="@drawable/category_book_click"
                            android:onClick="category"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_sports"
                            android:background="@drawable/category_sports_click"
                            android:onClick="category"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_electrodevice"
                            android:background="@drawable/category_electrodevice_click"
                            android:onClick="category"
                            android:layout_weight="1"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_life"
                            android:background="@drawable/category_life_click"
                            android:onClick="category"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"
                            />
                        <ImageButton

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_dog"
                            android:background="@drawable/category_dog_click"
                            android:onClick="category"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_travel"
                            android:background="@drawable/category_travel_click"
                            android:onClick="category"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_mobile"
                            android:background="@drawable/category_mobile_click"
                            android:onClick="category"
                            android:layout_weight="1"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_fashion"
                            android:background="@drawable/category_fashion_click"
                            android:onClick="category"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"
                            />
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_beauty"
                            android:background="@drawable/category_beauty_click"
                            android:onClick="category"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_instrument"
                            android:background="@drawable/category_instrument_click"
                            android:onClick="category"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_etc"
                            android:background="@drawable/category_etc_click"
                            android:onClick="category"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="16.3dp">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_write_realeatate"
                            android:background="@drawable/category_realestate_click"
                            android:onClick="category"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            />

                        <ImageButton
                            android:id="@+id/category_write_talent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/category_talent_click"
                            android:onClick="category"/>


                    </LinearLayout>

                    <!-- 나인패치 이미지 넣는 부분-->
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!--설명글 입력 -->
            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info_write_cardview"

                android:elevation="0dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/write_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/detail_text"
                        />
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="10.3dp">
                        <EditText
                            android:id="@+id/edit_modify_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|top"
                            android:hint="설명글을 입력하세요."
                            android:textColorHint="#646464"
                            android:background="@drawable/text_box"
                            android:minLines="4"/>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!--가격 등록 -->

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete_register_write"
                android:layout_weight="1"
                android:src="@drawable/regist_undo"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_write"
                android:layout_weight="1"
                android:src="@drawable/regist_do"
                android:background="@android:color/transparent"
                android:onClick="regist_do"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>