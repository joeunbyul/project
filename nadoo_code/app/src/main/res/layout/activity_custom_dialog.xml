<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">
    <FrameLayout
        android:layout_width="230.3dp"
        android:layout_height="163.3dp"
        android:orientation="vertical"
       >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/popup"
            />
        <EditText
            android:id="@+id/certifiation_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62.7dp"
            android:layout_marginBottom="34.7dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="인증번호"
            android:background="@drawable/certification_number"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="127.3dp"
            android:layout_gravity="center_horizontal">
            <ImageButton
                android:id="@+id/cancel_button"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="127.3dp"
                android:layout_gravity="left"
                android:src="@drawable/popup_undo"
                android:layout_marginBottom="11dp"
                android:background="@null"/>
            <ImageButton
                android:id="@+id/register_button"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="127.3dp"
                android:layout_marginBottom="11dp"
                android:src="@drawable/popup_regist"
                android:background="@null"/>


        </LinearLayout>


    </FrameLayout>

</LinearLayout>